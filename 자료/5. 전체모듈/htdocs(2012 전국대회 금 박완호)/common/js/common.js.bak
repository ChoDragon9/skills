/* Æû °ª °Ë»ç */
function frmChk(frm) {
	var arg = null;
	var argLen = arguments.length - 1;
	isOk = new Array();
	for(var i = argLen; i >= 1; i--) {
		arg = arguments[i];
		isOk[arg] = regChk(frm[arg]);
		if(isOk[arg] != 'true') {
			frm[arg].focus();
			frm[arg].style.backgroundColor = '#fee';
		} else {
			frm[arg].style.backgroundColor = '';
		}
	}
	for(var i = 1; i <= argLen; i++) {
		arg = arguments[i];
		if(isOk[arg] != 'true') {
			alert(isOk[arg]);
			return false;
		}
	}
}

