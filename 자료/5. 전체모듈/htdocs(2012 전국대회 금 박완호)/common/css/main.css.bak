@charset "euc-kr";


body { background:url(/img/bg_main.png) repeat }

/* Main Visual */
.main_visual { float:left; margin-top:30px }

/* Main Content */
.main_cont { float:left; width:100% }
.main_cont .main_title { float:left; width:100%; height:23px }
.main_top_cont { float:left; width:100%; height:130px }
.main_bottom_cont { float:left; width:100%; height:90px }

	/* Login */
	.login { float:left; width:210px; height:100px }
	.login .input_area { width:143px; float:left }
	.login .input_area2 { line-height:200% }
	.login .input_area input { float:left; width:121px; border:1px solid; border-color:#ccc #fff #fff #ccc; height:13px; padding:5px; margin-bottom:2px }
	.login p { float:left; font-weight:bold; margin-top:8px }

	/* Board */
	.board { float:left; width:270px; height:100px; margin-right:42px; margin-left:43px; position:relative }
	.board ul { float:right; height:22px; width:100% }
	.board ul li:first-child { float:left; padding-left:10px; background:url(/img/bg_list.png) no-repeat 0 6px }
	.board ul li { float:right }
	.board > p { position:absolute; top:2px; right:0 }

	/* Furniture List */
	.furniture_list { float:left; width:285px; height:100px; position:relative }
	.furniture_list ul { float:right; height:22px; width:100% }
	.furniture_list li:first-child { float:left; padding-left:10px; background:url(/img/bg_list.png) no-repeat 0 6px }
	.furniture_list li { float:right; text-align:right }
	.furniture_list > p { position:absolute; top:2px; right:0 }

	/* Furniture Write */
	.furniture_write { float:left; width:210px; height:95px; margin-right:30px }

	/* Banner */
	.banner { float:right; width:597px; height:95px }